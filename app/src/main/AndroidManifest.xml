<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="app.hty.gaziuzaygroundstation">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logogazi"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logogazi"
        android:supportsRtl="true"
        android:theme="@style/Theme.Design.NoActionBar">
        <activity
            android:name=".Activity.HomeAct"
            android:exported="true" />
        <activity
            android:name=".Activity.UploadActivity"
            android:exported="true" />
        <activity
            android:name=".Activity.FeedActivity"
            android:exported="true" />
        <activity
            android:name=".Activity.ForgotActivity"
            android:exported="true" />
        <activity
            android:name=".Activity.Login"
            android:exported="true" />
        <activity
            android:name=".Activity.RegisterActivity"
            android:exported="true" />
        <activity
            android:name=".Activity.Intro"
            android:exported="true" />
        <activity android:name=".Activity.Test" />
        <activity
            android:name=".Activity.MainActivity"
            android:screenOrientation="landscape"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".Activity.TcpActivity"
            android:screenOrientation="landscape"
            tools:ignore="LockedOrientationActivity" />
        <activity android:name=".Activity.ChooseConnection" />
        <activity android:name=".Activity.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>